version: '3'
services:
  # Spring Boot Application
  spring-boot-app:
    image: rahmafeidi/srping:latest
    ports:
      - "9999:9999"
    depends_on:
      - postgres-db
    environment:
      SPRING_DATASOURCE_URL: jdbc:postgresql://postgres-db:5432/yourdatabase
      SPRING_DATASOURCE_USERNAME: yourdbuser
      SPRING_DATASOURCE_PASSWORD: yourdbpassword
    networks:
      - app-network

  # Angular Application
  angular-app:
    image: rahmafeidi/angular:latest
    ports:
      - "80:80"
    depends_on:
      - spring-boot-app
    networks:
      - app-network

  # PostgreSQL Database
  postgres-db:
    image: postgres:latest
    ports:
      - "5432:5432"
    environment:
      POSTGRES_DB: yourdatabase
      POSTGRES_USER: yourdbuser
      POSTGRES_PASSWORD: yourdbpassword
    networks:
      - app-network

networks:
  app-network:
    driver: bridge

